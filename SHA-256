  <!-- Page Content -->
  <main class="mt-4">
    <header class="mb-4 text-center">
      <h1 class="display-6">SHA-256 Hash Generator</h1>
      <p class="text-muted">Type any text and see its SHA-256 hash instantly.</p>
    </header>

    <div class="mb-3">
      <label for="data-input" class="form-label">Data</label>
      <input type="text" id="data-input" class="form-control" value="Hello Blockchain">
    </div>

    <div class="mb-3">
      <label for="hash-output" class="form-label">SHA-256 Hash</label>
      <input type="text" id="hash-output" class="form-control" readonly>
    </div>
